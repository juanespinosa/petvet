@model VetPet.Models.RegisterViewModel
@{
    ViewBag.Title = "Registro de usuarios";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <fieldset>
                    <legend>Crear una nueva cuenta</legend>

                    <div class="form-group">
                        @Html.LabelFor(m => m.IdCard, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.IdCard, new { @class = "form-control" })
                            <p class="help-block">@Html.ValidationMessageFor(m => m.IdCard)</p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            <p class="help-block">@Html.ValidationMessageFor(m => m.Password)</p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            <p class="help-block">@Html.ValidationMessageFor(m => m.ConfirmPassword)</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-primary" value="Registrar" />
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
