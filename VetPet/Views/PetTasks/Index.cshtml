@model VetPet.Domain.PetModule.Aggregate.PetAgg.Pet

<p>
    @Html.ActionLink("Nueva tarea", "Create", new { petId = Model.Id })
</p>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>
            Tipo de tarea
        </th>
        <th>
            Nombre de la tarea
        </th>
        <th>
            Fecha y hora
        </th>
        <th>
            Precio
        </th>
        <th></th>
    </tr>
        </thead>
@foreach (var item in Model.PetTasks.OrderBy(pt => pt.DateTime)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Task.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Task.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
